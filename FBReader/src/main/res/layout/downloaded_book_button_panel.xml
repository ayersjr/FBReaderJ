<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/button_area"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginTop="4dip"
android:layout_marginBottom="2dip"
android:orientation="vertical"
android:layout_above="@id/book_info_button_panel"
	>
<Button
	android:id="@+id/book_info_button_open"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:maxLines="2"
	/>
<Button
	android:id="@+id/bookshare_btn_readinglist_bottom"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="4dip"
	android:layout_marginBottom="2dip"
	android:text="@string/book_details_readinglist_button"
	android:textStyle="bold"
	android:focusable="true"
	android:visibility="visible"
	/>
<Button
	android:id="@+id/book_info_button_edit"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:maxLines="2"
	android:visibility="gone"
	/>
<Button
	android:id="@+id/book_info_button_remove"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:contentDescription="@string/message_confirm_remove_book"
	android:maxLines="2"
	/>
</LinearLayout>
